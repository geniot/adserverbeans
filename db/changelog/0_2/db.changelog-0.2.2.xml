<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet id="1" author="Vitaly Sazanovich">
        <addColumn tableName="banner">
            <column name="day_bits" type="varchar(7)"/>
        </addColumn>
        <dropColumn tableName="banner" columnName="sun"/>
        <dropColumn tableName="banner" columnName="mon"/>
        <dropColumn tableName="banner" columnName="tue"/>
        <dropColumn tableName="banner" columnName="wed"/>
        <dropColumn tableName="banner" columnName="thu"/>
        <dropColumn tableName="banner" columnName="fri"/>
        <dropColumn tableName="banner" columnName="sat"/>
    </changeSet>
</databaseChangeLog>





