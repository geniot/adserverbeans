<ads:BannerTargetingTimeHourCanvas xmlns:ads="http://adserversoft.com"
                                   xmlns:mx="http://www.adobe.com/2006/mxml"
                                   xmlns:component="com.adserversoft.flexfuse.client.view.component.*"
                                   xmlns:canvas="com.adserversoft.flexfuse.client.view.canvas.*"
                                   width="100%"
                                   height="100%">
    <mx:HBox width="100%">
        <mx:Spacer width="5"/>
        <mx:VBox>
            <mx:RadioButton id="allHourRB"  groupName="day" label="All hours of the day" selected="true"/>
            <mx:RadioButton id="someHourRB" groupName="day" label="Selected hours of the day"/>
            <mx:HBox id="dayHB" width="100%" paddingLeft="22">
                <mx:VBox width="120">
                    <mx:CheckBox id="morningCB" label="morning"/>
                    <mx:VBox width="120" paddingLeft="22">
                        <mx:CheckBox id="cb5"  label="5.00-6.00"/>
                        <mx:CheckBox id="cb6"  label="6.00-7.00"/>
                        <mx:CheckBox id="cb7"  label="7.00-8.00"/>
                        <mx:CheckBox id="cb8"  label="8.00-9.00"/>
                        <mx:CheckBox id="cb9"  label="9.00-10.00"/>
                        <mx:CheckBox id="cb10" label="10.00-11.00"/>
                        <mx:CheckBox id="cb11" label="11.00-12.00"/>
                    </mx:VBox>
                </mx:VBox>
                <mx:VBox width="120">
                    <mx:CheckBox id="afternoonCB" label="afternoon"/>
                    <mx:VBox width="120" paddingLeft="22">
                        <mx:CheckBox id="cb12" label="12.00-13.00"/>
                        <mx:CheckBox id="cb13" label="13.00-14.00"/>
                        <mx:CheckBox id="cb14" label="14.00-15.00"/>
                        <mx:CheckBox id="cb15" label="15.00-16.00"/>
                        <mx:CheckBox id="cb16" label="16.00-17.00"/>
                        <mx:CheckBox id="cb17" label="17.00-18.00"/>
                    </mx:VBox>
                </mx:VBox>
                <mx:VBox width="120">
                    <mx:CheckBox id="eveningCB" label="evening"/>
                    <mx:VBox width="120" paddingLeft="22">
                        <mx:CheckBox id="cb18" label="18.00-19.00"/>
                        <mx:CheckBox id="cb19" label="19.00-20.00"/>
                        <mx:CheckBox id="cb20" label="20.00-21.00"/>
                        <mx:CheckBox id="cb21" label="21.00-22.00"/>
                    </mx:VBox>
                </mx:VBox>
                <mx:VBox width="120">
                    <mx:CheckBox id="nightCB" label="night"/>
                    <mx:VBox width="120" paddingLeft="22">
                        <mx:CheckBox id="cb22" label="22.00-23.00"/>
                        <mx:CheckBox id="cb23" label="23.00-0.00"/>
                        <mx:CheckBox id="cb0"  label="0.00-1.00"/>
                        <mx:CheckBox id="cb1"  label="1.00-2.00"/>
                        <mx:CheckBox id="cb2"  label="2.00-3.00"/>
                        <mx:CheckBox id="cb3"  label="3.00-4.00"/>
                        <mx:CheckBox id="cb4"  label="4.00-5.00"/>
                    </mx:VBox>
                </mx:VBox>
            </mx:HBox>
        </mx:VBox>
    </mx:HBox>
</ads:BannerTargetingTimeHourCanvas>
