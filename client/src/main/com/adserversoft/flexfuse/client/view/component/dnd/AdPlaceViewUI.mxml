<ads:AdPlaceView
        xmlns:ads="http://adserversoft.com"
        xmlns:mx="http://www.adobe.com/2006/mxml"
        xmlns:button="com.adserversoft.flexfuse.client.view.component.button.*"
        width="100%"
        height="100%"
        >
    <mx:VBox
            width="100%"
            verticalGap="0"
            paddingTop="0"
            paddingBottom="0"            
            borderColor="#C4CCCC"
            >
        <mx:HBox
                width="100%"
                horizontalGap="0"
                backgroundColor="#f7f7f7"
                >
            <mx:Button
                    id="dragB"
                    width="14"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    toolTip="Drag me!"
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />

            <button:ExpandToggleButton
                    id="expandB"
                    imageType="1"
                    width="21"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    toolTip="Expand"
                   
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:TextInput
                    id="adPlaceNameTI"
                    width="100%"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    maxChars="{ApplicationConstants.MAX_CHARS}"
                    paddingTop="5"
                    paddingLeft="3"
                    borderStyle="solid"
                    borderSides=""
                    focusAlpha="0.0"
                    borderSkin="{null}"
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:HBox
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    paddingTop="2"
                    paddingLeft="0"
                    paddingRight="1"
                    paddingBottom="2"
                    >
                <mx:ComboBox
                        id="adFormatCB"
                        width="80"
                        height="24"
                        paddingTop="1"
                        paddingLeft="1"
                        paddingRight="1"
                        labelField="shortAdFormatName"
                        dataProvider="{ApplicationConstants.AD_FORMATS}"
                        >
                </mx:ComboBox>
            </mx:HBox>
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:Label
                    id="viewsL"
                    width="50"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    paddingTop="5"
                    paddingLeft="3"
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:Label
                    id="clicksL"
                    width="50"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    paddingTop="5"
                    paddingLeft="3"
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:Label
                    id="ctrL"
                    width="50"
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    paddingTop="5"
                    paddingLeft="3"
                    />
            <mx:VRule
                    height="{ApplicationConstants.ROW_HEIGHT}"
                    />
            <mx:HBox horizontalGap="3" horizontalScrollPolicy="off" verticalScrollPolicy="off" horizontalAlign="right" width="56">
                
                <mx:LinkButton
                        id="getAdTagBtn"
                        width="18"
                        toolTip="Get ad tag"
                        icon="@Embed('/images/adtag.gif')"
                        paddingTop="5"
                        paddingLeft="0"
                        paddingRight="0"
                        />
                <mx:LinkButton
                        id="deleteBtn"
                        width="18"
                        toolTip="Delete"
                        icon="@Embed('/images/del.gif')"
                        paddingTop="5"
                        paddingLeft="0"
                        />
            </mx:HBox>
        </mx:HBox>
        <mx:HRule
                width="100%"
                height="1"
                />
    </mx:VBox>
    <mx:Script><![CDATA[
        import com.adserversoft.flexfuse.client.model.ApplicationConstants;
        ]]></mx:Script>
</ads:AdPlaceView>