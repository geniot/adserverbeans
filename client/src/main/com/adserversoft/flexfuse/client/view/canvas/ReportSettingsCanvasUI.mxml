<ads:ReportSettingsCanvas
        xmlns:ads="http://adserversoft.com"
        xmlns:mx="http://www.adobe.com/2006/mxml"
        width="100%"
        height="100%"
        horizontalScrollPolicy="off"
        verticalScrollPolicy="off"
        >
    <mx:VBox
            width="100%"
            height="100%"
            paddingLeft="3"
            paddingRight="3"
            paddingTop="3"
            paddingBottom="0"
            verticalGap="3"
            >
        <mx:VBox
                width="100%"
                height="100%"
                paddingLeft="3"
                paddingRight="3"
                paddingTop="3"
                paddingBottom="0"
                verticalGap="3"
                >
            <mx:Label
                    text="Selection Criteria"
                    fontSize="14"
                    />
            <mx:Label
                    text="Time"
                    fontWeight="bold"
                    />
            <mx:HBox width="100%">
                <mx:Label
                        text="From:"
                        />
                <mx:Spacer
                        width="100%"
                        />
                <mx:DateField
                        id="fromPeriodDF"
                        />
            </mx:HBox>
            <mx:HBox width="100%">
                <mx:Label
                        text="To:"
                        />
                <mx:Spacer
                        width="100%"
                        />
                <mx:DateField
                        id="toPeriodDF"
                        />
            </mx:HBox>
            <mx:HBox width="100%">
                <mx:Label
                        text="Predefined period:"
                        />
                <mx:Spacer width="100%"/>
                <mx:ComboBox
                        id="periodCB"
                        width="22"
                        dropdownWidth="75"
                        labelField="period"
                        dataProvider="{ApplicationConstants.PERIOD}"
                        rowCount="{ApplicationConstants.PERIOD.length}"
                        />
            </mx:HBox>
            <mx:HBox width="100%">
                <mx:Label
                        text="Precision:"
                        />
                <mx:Spacer width="100%"/>
                <mx:ComboBox
                        id="precisionCB"
                        labelField="precision"
                        dataProvider="{ApplicationConstants.PRECISION}"
                        rowCount="{ApplicationConstants.PRECISION.length}"
                        />
            </mx:HBox>
            <mx:HRule
                    width="100%"
                    height="1"
                    />
            <mx:Label
                    text="Type"
                    fontWeight="bold"
                    />
            <mx:RadioButton
                    id="bannersTypeRB"
                    groupName="types"
                    label="banners"
                    selected="true"
                    />
            <mx:RadioButton
                    id="adPlacesTypeRB"
                    groupName="types"
                    label="ad places"
                    />
            <mx:RadioButton
                    id="bannersOnAdPlacesTypeRB"
                    groupName="types"
                    label="banners by ad places"
                    />
            <mx:HRule
                    width="100%"
                    height="1"/>
            <mx:Label
                    text="Items"
                    paddingLeft="2"
                    paddingRight="2"
                    fontWeight="bold"
                    />
            <mx:VBox
                    id="entityVB"
                    width="100%"
                    height="100%"

                    minWidth="0"
                    minHeight="0"
                    paddingLeft="2"
                    paddingRight="2"
                    verticalGap="1"
                    borderStyle="solid"
                    >
            </mx:VBox>
            <mx:Button
                    id="reloadB"
                    toolTip="Reload report"
                    label="Generate"
                    />
            <mx:ControlBar
                    width="100%"
                    paddingBottom="0"
                    paddingLeft="0"
                    paddingRight="0"
                    paddingTop="0"
                    verticalAlign="middle"
                    horizontalAlign="right"
                    >
                <mx:HBox
                        width="100%"
                        paddingTop="3"
                        paddingLeft="3"
                        paddingRight="3"
                        paddingBottom="3"
                        >
                    <mx:Spacer
                            width="100%"
                            height="40"
                            />
                </mx:HBox>
            </mx:ControlBar>
        </mx:VBox>
    </mx:VBox>
    <mx:Script><![CDATA[
        import com.adserversoft.flexfuse.client.model.ApplicationConstants;
        ]]></mx:Script>
</ads:ReportSettingsCanvas>