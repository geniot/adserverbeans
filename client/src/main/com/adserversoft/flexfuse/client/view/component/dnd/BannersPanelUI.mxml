<ads:BannersPanel
        xmlns:ads="http://adserversoft.com"
        xmlns:mx="http://www.adobe.com/2006/mxml"
        width="50%"
        height="100%"
        title="Banners"
        borderThicknessTop="0"
        borderThicknessRight="0"
        borderThicknessLeft="0"
        borderThicknessBottom="0"
        borderColor="#000000"
        color="#FFFFFF"
        headerColors="[#000000,#000000]"
        verticalAlign="top"
        verticalGap="0"
        headerHeight="0"
        >
    <mx:VBox
            width="100%"
            verticalGap="0"
            color="#000000"
            >
        <mx:HBox
                id="hBox"
                width="100%"
                horizontalGap="0"
                borderColor="#C4CCCC"
                backgroundColor="#e5e5e5"
                >
            <mx:Label
                    width="14"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    text=""
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="Name"
                    percentWidth="100"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="Ad Format"
                    width="81"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="Views"
                    width="50"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="Clicks"
                    width="50"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="CTR"
                    width="50"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text="File Size"
                    width="70"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    fontWeight="bold"
                    paddingTop="2"
                    paddingLeft="4"
                    />
            <mx:VRule
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
            <mx:Label
                    text=""
                    width="56"
                    height="{ApplicationConstants.HEADER_HEIGHT}"
                    />
        </mx:HBox>


        <mx:HRule
                width="100%"
                height="1"
                />
    </mx:VBox>
    <mx:VBox
            id="rightVB"
            width="100%"
            verticalGap="0"
            color="#000000"
            >

        <mx:HBox
                width="100%"
                horizontalAlign="right"
                paddingTop="5"
                paddingLeft="5"
                paddingRight="5"
                paddingBottom="5"
                >
            <mx:Button
                    id="addBannerB"
                    width="25"
                    height="25"
                    toolTip="Add new banner"
                    icon="@Embed('/images/add.png')"
                    paddingTop="0"
                    paddingLeft="0"
                    paddingRight="0"
                    paddingBottom="0"
                    />
        </mx:HBox>
    </mx:VBox>
    <mx:Script><![CDATA[
        import com.adserversoft.flexfuse.client.model.ApplicationConstants;
        ]]></mx:Script>
</ads:BannersPanel>